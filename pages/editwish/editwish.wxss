/* pages/editwish/editwish.wxss */
#edit-content{
  width: 100%;
}
textarea{
  width: 100%;
  margin: 20rpx 0rpx;
  font-size: 34rpx;
}
.bottom-add-bar{
  width: 100%;
  height: 180rpx;
  position: fixed;
  bottom: 0%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bottom-add-bar button{
  width: 130rpx;
  height: 130rpx;
  background-color: #F0EFEF;
  color: #E5C5CC;
  font-size: 70rpx;
  line-height: 130rpx;
  padding: 0rpx;
  margin: 0rpx;
  border-radius: 50%;
}
.bottom-add-bar button::after{
  border: none;
}
hr{
  position: fixed;
  bottom: 200rpx;
  display: block;
  width: 100%;
  height: 4rpx;
  background-color: #E5C4CD;
}
.imgs-layout image{
  max-height: 700rpx !important;
}