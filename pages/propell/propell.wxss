.container{
  position: relative;
}
.all-push{
width:100%;
height:74rpx;
text-align:center;
vertical-align:middle;
position:absolute;
top:-7rpx;
left:0;
background-color:rgba(255, 255, 255,.5);
padding-top:10rpx;
}

.all-push text{
  font-size: 30rpx;
  color: #a5794c;
  letter-spacing:2rpx;
  margin-right:14rpx;
}
.all-push button image{
 width:30rpx;
height:14rpx;
vertical-align:middle;

}
.all-push button{
  width:260rpx;
  background-color:transparent;
  position:absolute;
  display:block;
  top:-8rpx;
  left:calc(50% - 130rpx);
}
button::after{
  border: none;
}

.push-categories{
  position: relative;
  top: 74rpx;
  width: 100%;
  height: 194rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-content: space-around;
  background-color: #FCECEB;
}

.push-categories button{
  font-size: 22rpx;
  color:#A5794C;
  width: 154rpx;
  height: 55rpx;
  background-color:#F6F5F3;
}
