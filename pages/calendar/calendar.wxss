/* pages/calendar/calendar.wxss */
.container{
  width: 100%;
  height: 100%;
}
.calendar{
  width: 100%;
}
.components-calendar-calendar--calendar-header,.components-calendar-calendar--calendar-weeks,.components-calendar-calendar--calendar-days
{
  background-color: rgba(255, 255, 255, .3)
}
.components-calendar-calendar--calendar-header{
  width:100%;
  padding: 60rpx 0rpx 30rpx;
  margin: 0px !important;
}
.components-calendar-calendar--calendar-header>text{
  font-size: 30rpx;
  color:#FEAEB9;
}
.components-calendar-calendar--calendar-header picker text{
  font-size: 30rpx;
  color:#FEAEB9;
}
.components-calendar-calendar--calendar-weeks{
  padding-bottom: 20rpx;
  margin-bottom: 6rpx;
}
.components-calendar-calendar--calendar-weeks text{
  font-size: 30rpx;
  color:#FEAEB9;
  margin-bottom: 10rpx;
}
.components-calendar-calendar--calendar-day{
  font-size: 30rpx !important;
  font-weight: bolder;
}
.components-calendar-calendar--calendar-days{
  padding: 30rpx 10rpx;
}
.components-calendar-calendar--calendar-board{
  margin-bottom: 6rpx;
}
.time,.sentence{
  width:100%;
  height: 170rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 255, 255, .3);
  margin-bottom: 6rpx;
}
.time text:nth-of-type(1){
  font-size: 36rpx;
  font-weight: 800;
  color: #FCFAD0;
}
.time text:nth-of-type(2){
  color:#FEAEB9;
  font-size: 110rpx;
  text-shadow:  2px 3px 4px rgba(0, 0, 0, .3);
  margin: 0rpx 30rpx;
}
.time text:nth-of-type(3){
  font-size: 30rpx;
  font-weight: 800;
  color: #FCFAD0;
  align-self: flex-end;
  margin-bottom: 26rpx;
}
.sentence text{
  font-size: 36rpx;
  font-weight: 800;
  color: #FCFAD0;
}
.sentence image{
  width:84rpx;
  height: 70rpx;
  margin: 0rpx 20rpx;
}  