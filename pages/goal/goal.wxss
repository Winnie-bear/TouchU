.main-content image{
  width:52rpx;
  height: 52rpx;
  margin: 30rpx;
}
.target-amount{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 100%;
  height: 180rpx;
  background-color: rgba(255, 255, 255, .4);
  margin-bottom: 6rpx;
}
.target-amount-top,.achieve-time-left{
  display: flex;
  align-items: center;

}
.target-amount-top,.achieve-time-left,.transfer-time-left text{
  font-size: 32rpx;
  color: #969595;
}
.target-amount input{
  margin-left: 114rpx;
  color: #FF5E5E;
}
.achieve-time{
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  width: 100%;
  height: 156rpx;
  background-color: rgba(255, 255, 255, .4);
  margin-top: 6rpx;
}
achievetime{
  margin:20rpx 0rpx
}
.achieve-time text{
  color: #969595;
  font-size: 34rpx;
  margin-left: 10rpx;
} 
.achieve-time-right{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  margin-right:46rpx;
}
.achieve-time-right-month{
  display: flex;
  align-items: center;
}
.achieve-time-right-month text{
  font-size: 34rpx;
  color: #969595;
}
.achieve-time-right>text{
  font-size: 25rpx;
  color: #969595;
}
.transfer-accounts{
  width: 100%;
  height: 290rpx;
  display: flex;
  justify-content: space-between;
  margin-top: 6rpx;
}
.transfer-accounts-left,.transfer-accounts-right{
  width: 49.6%;
  display: inline-flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background-color: rgba(255, 255, 255, .4);
}
.transfer-accounts-left-tap,.transfer-accounts-right-tap{
  width: 49.6%;
  display: inline-flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background-color: rgba(255, 255, 255, .4);
  border: 1px solid #FF5E5E;
  color: #FF5E5E;
}
.transfer-accounts-left,.transfer-accounts-right text{
  color: #969595;
}
.fontsize text:nth-of-type(1){
  font-size: 32rpx;
} 
.fontsize text:nth-of-type(2){
  font-size: 54rpx;
}
.fontsize text:nth-of-type(3){
  font-size: 25rpx;
}
.transfer-time{
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 130rpx;
  background-color: rgba(255, 255, 255, .4);
  margin: 6rpx 0rpx 140rpx;
}
.transfer-time-left{
  display: flex;
  align-items: center;
  margin-right:298rpx;
}
picker{
  font-size: 32rpx;
  color: #969595;
}
.picker{
   display: flex;
  align-items: center;
}
.picker image{
 width: 15rpx;
 height: 25rpx;
}
.confirm{
  width: 250rpx;
  height: 70rpx;
  color: #FF5E5E;
  background-color: #D4D7E6;
  line-height:64rpx;
}