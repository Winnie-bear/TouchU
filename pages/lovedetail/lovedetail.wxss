/* pages/timedetail/timedetail.wxss */
.top{
  width: 100%;
  height: 115rpx;
  background-color: rgba(255, 255,255, .6);
  display:inline-flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 8rpx;
}
.top text{
  font-size: 40rpx;
  color: #A5794C;
}
#detail{
  width: 100%;
  height: 100%;
  padding: 40rpx 0rpx;
  background-color: rgba(255, 255,255, .6);
}
#detail text:nth-of-type(1){
  font-size: 32rpx;
  color: #807D7E;
  text-indent: 60rpx;
  line-height: 46rpx;
  margin-bottom: 40rpx;
  display: -webkit-box;
}
#detail text:nth-of-type(2){
  display: inline-block;
  font-size: 24rpx;
  color: #B3B1B1;
  text-indent: 60rpx;
}
#detail text:nth-of-type(3){
  display: inline-block;
  font-size: 24rpx;
  color: #B3B1B1;
  margin-left: 20rpx;
}