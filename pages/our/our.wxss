.top-avatars-bar{
  width: 100%;
  height: 284rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: rgba(255, 255, 255, .6)
}
.top-avatars-bar>image{
  width: 112rpx;
  height: 92rpx;
}
.moreinfo{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding-top: 10rpx;
}
.moreinfo-item{
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background-color: rgba(255, 255, 255, .5);
  margin-bottom: 10rpx;
}
.moreinfo-item image{
  width: 64rpx;
  height: 64rpx;
  margin: 0rpx 26rpx;
}
.moreinfo-item text{
  margin-left: 8rpx;
  font-size: 32rpx;
  color: #A5794C;
}
.avatar-left,.avatar-right{
  display: inline-flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.avatar-right image{
  width: 142rpx;
  height: 142rpx;
  border-radius: 50%;
}
.avatar-left image{
  width: 142rpx;
  height: 142rpx;
   border-radius: 50%;
}
.top-avatars-bar text{
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #A5794C;
}