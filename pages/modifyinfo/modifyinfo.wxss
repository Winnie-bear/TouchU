/* pages/modifyinfo/modifyinfo.wxss */
#container{
  width: 100%;
  height: 1400rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.avatar image{
  width: 352rpx;
  height: 352rpx;
  border-radius: 50%;
}
.user-name{
  position: relative;
  bottom: 340rpx;
  display: inline-flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  height: 200rpx;
}
.user-name text{
  font-size: 46rpx;
  color: #A5794C;
}
input{
  width: 400rpx;
  height: 80rpx;
  background-color: rgba(255, 255, 255, .3);
  border-radius: 20rpx;
  font-size: 40rpx;
  color: #A5794C;
}