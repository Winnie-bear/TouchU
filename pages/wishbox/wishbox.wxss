/* pages/wishbox/wishbox.wxss */
.container{
  width: 100%;
  height: 100%;
}
swiper{
  width: 100%;
  height: 935rpx;
  position: relative;
  top:180rpx;
  margin: 0 auto;
}
#wish-box-wrapper{
  width: 610rpx;
  height: 935rpx;
  margin: 0 auto;
}
.wish-box-img{
  width:610rpx;
  height: 745rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 255, 255, .5);
}
swiper-item:nth-of-type(1) .wish-box-img image{
  width: 367rpx;
  height: 367rpx;
  /* position: absolute;
  z-index: -1; */
}
swiper-item:not(:nth-of-type(1)) .wish-box-img image{
  width:520rpx;
  max-height:700rpx !important; 
  border-radius:16rpx;
  position: absolute;
  /* z-index: -1; */
}
.wish-box-text{
  width:610rpx;
  height: 160rpx;
  background-color: rgba(255, 255, 255, .5);
  margin-top: 8rpx;
  color: #FFF;
  text-indent: 40rpx;
  padding: 15rpx 0rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 3;
}
.wish-box-text text{
  display: block;
  height: 160rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 3;
}
.delete{
  width:610rpx;
  height: 745rpx;
  background-color: rgba(0, 0, 0, .4)
}
.del-btn{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  line-height: 200rpx;
  background-color: #F8C8CE;
  color: white;
}
.hide{
  display: none;
}
.order{
  z-index: -1
}